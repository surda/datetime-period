{
    "name": "surda/datetime-period",
    "description": "Datetime period control for Nette Framework",
    "keywords": ["nette", "control", "datetime"],
    "type": "library",
    "homepage": "http://surani.cz",
    "license": "MIT",
    "authors": [
        {
            "name": "Radek Šuráni",
            "homepage": "http://surani.cz",
            "email": "radek@surani.cz"
        }
    ],
    "support": {
        "email": "radek@surani.cz",
        "issues": "https://github.com/surda/datetime-period/issues"
    },
    "require": {
        "php": ">=7.1",
        "nette/di": "^3.0",
        "surda/themeable-controls": "^1.0",
        "nesbot/carbon": "^2.0"
    },
    "require-dev": {
        "nette/tester": "^2.0",
        "ninjify/nunjuck": "0.3.x-dev",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-strict-rules": "^0.11",
        "phpstan/phpstan-nette": "^0.11",
        "phpstan/phpstan-deprecation-rules": "^0.11"
    },
    "autoload": {
        "psr-4": {
            "Surda\\DateTimePeriod\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Surda\\DateTimePeriod\\": "tests/cases"
        }
    },
    "scripts": {
        "tests": [
            "vendor/bin/tester -s -p php -C tests/cases"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse -l max -c phpstan.neon src"
        ],
        "da": [
            "composer dump-autoload -o"
        ]
    },
    "minimum-stability": "stable"
}
